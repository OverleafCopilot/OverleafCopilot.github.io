<create-agent name="Plain Agent">
	<icon mdi="robot" />
	<desc>
		Plain Agent Template
	</desc>
	<model temperature="0.7" maxtokens="1000" method="chatcmpl">
		gpt-3.5-turbo
	</model>
	<layout>
		<workspace>
			<vertical>
				<toolbar>
					<actions>
						<action preset="clear" />
						<action preset="copy" />
					</actions>
				</toolbar>
				<chatlist />
				<inputarea />
			</vertical>
		</workspace>
	</layout>
	<pre-action>
		<panel-expand />
	</pre-action>
	<prompt>
		<system>
			You are a helpful assistant. You can help me by answering my questions. You can also ask me questions.
		</system>
		<user>
			<input />
		</user>
	</prompt>
</create-agent>
